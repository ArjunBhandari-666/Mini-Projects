<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/civ_all_category_app_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/camera"
        app:civ_border_color="#FFFFFF"
        app:civ_fill_color="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/tv_all_category_app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/civ_all_category_app_image"
        android:layout_alignBottom="@+id/civ_all_category_app_image"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/civ_all_category_app_image"
        android:gravity="center_vertical"
        android:text="@string/app_name"
        android:textSize="16sp" />

</RelativeLayout>